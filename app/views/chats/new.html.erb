<h1>New Chat</h1>

<%= form_with(model: @chat, local: true) do |f| %>
  <% if @chat.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @chat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :sender_id, "Sender" %>
    <%= f.select :sender_id, User.all.map { |u| [u.email, u.id] }, {}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= f.label :receiver_id, "Receiver" %>
    <%= f.select :receiver_id, User.all.map { |u| [u.email, u.id] }, {}, class: "form-select" %>
  </div>
  <%= f.submit 'Create Chat', class: "btn btn-primary" %>
<% end %>
