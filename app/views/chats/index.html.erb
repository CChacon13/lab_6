<h1>Chats</h1>
<%= link_to 'Add new chat', new_chat_path, class: 'btn btn-success mb-3' %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= link_to chat.sender.email, user_path(chat.sender) %></td>
        <td><%= link_to chat.receiver.email, user_path(chat.receiver) %></td>
        <td><%= chat.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'Show', chat_path(chat), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-warning btn-sm' %>
          <%# <%= link_to 'Destroy', chat_path(chat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
