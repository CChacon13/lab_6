<h1>Users</h1>

<%= link_to 'Add new user', new_user_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Messages Sent</th> 
      <th>Joined</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.messages.count %></td> 
        <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
          <%# <%= link_to 'Destroy', user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
