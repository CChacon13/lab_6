<h1>Messages</h1>
<%= link_to 'Add new message', new_message_path, class: 'btn btn-success mb-3' %>
<table class="table">
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>User</th>
      <th>Body</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.chat_id %></td>
        <td><%= message.user.email %></td>
        <td><%= message.body %></td>
        <td><%= message.created_at %></td>
        <td><%= link_to 'Show', message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>