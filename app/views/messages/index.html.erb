<h1>Messages</h1>
<%= link_to 'Add new message', new_message_path, class: 'btn btn-success mb-3' %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Chat</th>
      <th>User</th>
      <th>Body (preview)</th>
      <th>Sent At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to "Chat ##{message.chat_id}", chat_path(message.chat) %></td>
        <td><%= link_to message.user.email, user_path(message.user) %></td>
        <td><%= truncate(message.body, length: 50) %></td>
        <td><%= message.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'Show', message_path(message), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_message_path(message), class: 'btn btn-warning btn-sm' %>
          <%# <%= link_to 'Destroy', message_path(message), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
